<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{% block title %}Graphbug - Visualize Data{% endblock %}</title>

    <link href="/site-media/css_commons/reset-fonts-grids.css" rel="stylesheet" type="text/css" />
    <link href="/site-media/css_commons/three_column_fixed_layout.css" rel="stylesheet" type="text/css" />
    <link href="/site-media/css_commons/widgets.css" rel="stylesheet" type="text/css" />
    <link href="/site-media/css/bugs_life_theme.css" rel="stylesheet" type="text/css" />

    <script src="/site-media/js/jquery-1.3.2.min.js" type="text/javascript"></script>
    <script src="/site-media/js/french_maid.js" type="text/javascript"></script>
  </head>
  <body>
    <div id="spacer" style="height: 40px;">
      &nbsp; {# This is a hack to get some top spacing #}
    </div>
    <div class="frame">
      <div class="header">
        {% block header %}
          <div class="container" style="float: left">  
            <h1>Graphbug</h1>
          </div>
          <div class="nav container" style="float:right">
            <ul class="menu horizontal top">
              <li><a href="/">home</a></li>
              <li><a href="{% url funnelcake.views.benefits %}">benefits</a></li>
              <!-- <li><a href="{% url funnelcake.views.help %}">help</a></li> -->
              <!-- <li><a href="#">login</a></li> -->
            </ul>
            &nbsp;
          </div>
        {% endblock %}
      </div>
      
      <div class="section" id="notifications">
        {% if notice %}
          <p class="notice container">{{ notice }}</p>
        {% endif %}
        {% if error %}
          <p class="error container">{{ error }}</p>
        {% endif %}
      </div>

      {% block splash %}
      {% endblock %}

      <div class="section" id="content">
        {% block content %}{% endblock %}
      </div>
      
      <div class="footer">
        {% block footer %}
        <div class="container">
          <ul class="menu horizontal">
            <li><a href="{% url funnelcake.views.about %}">About</a></li>
            <li><a href="{% url funnelcake.views.feedback %}">Feedback</a></li>
            <!-- <li><a href="http://blog.graphbug.com">News</a></li> -->
            <li><a href="http://twitter.com/graphbug">Status</a></li>
            <!-- <li><a href="#">Developers</a></li> -->
          </ul>
        </div>
        <div class="container">
          Graphbug &#169; 2009

          <a href="" data-remote="false" data-update="search" style="float: right; color: black; text-decoration: none;">
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          </a>
        </div>

        <div id="search" class="container hidden">
          <form class="half" action="{% url graphs.views.search %}" method="get">
            <input type="text" class="search" id="query" name="query" style="width: 100%" />
          </form>
          <span class="clear">&nbsp;</span>
          <p>
          {{ root }} 
          | {{ MEDIA_URL }} 
          | {{ debug }} 
          </p>
        </div>
        {% endblock %}
      </div>
    </div>

    {% include "_analytics.html" %}
  </body>
</html>
