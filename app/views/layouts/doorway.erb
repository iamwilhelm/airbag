<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Graphbug - Visualize Data</title>

    <%= stylesheet_link_tag "css_commons/reset-fonts-grids.css" %>
    <%= stylesheet_link_tag "css_commons/three_column_fixed_layout.css" %>
    <%= stylesheet_link_tag "css_commons/widgets.css" %>
    <%= stylesheet_link_tag "bugs_life_theme.css" %>

    <%= javascript_include_tag "jquery-1.3.2.min.js" %>
    <%= javascript_include_tag "french_maid.js" %>
  </head>
  <body>
    <div id="spacer" style="height: 40px;">
      &nbsp; <!-- This is a hack to get some top spacing -->
    </div>
    <div class="frame">
      <div class="header">
        <div class="container" style="float: left">  
          <h1>Graphbug</h1>
        </div>
        <div class="nav container" style="float:right">
          <ul class="menu horizontal top">
            <li><%= link_to "home", root_path %></li>
            <li><%= link_to "benefits", benefits_funnelcake_path %></li>
            <!-- <li><a href="#">help</a></li> -->
            <!-- <li><a href="#">login</a></li> -->
          </ul>
          &nbsp;
        </div>
      </div>
      
      <%= render :partial => "layouts/app_notification" %>
      
      <%= yield :splash %>

      <div class="section" id="content">
        <%= yield %>
      </div>
      
      <div class="footer">
        <div class="container">
          <ul class="menu horizontal">
            <li><%= link_to "About", about_funnelcake_path %></li>
            <li><%= link_to "Feedback", feedback_funnelcake_path %></li>
            <!-- <li><a href="http://blog.graphbug.com">News</a></li> -->
            <li><%= link_to "Status", "http://twitter.com/graphbug" %></li>
            <!-- <li><a href="#">Developers</a></li> -->
          </ul>
        </div>
        <div class="container">
          Graphbug &#169; 2009

          <a href="" data-remote="false" data-update="search" style="float: right; color: black; text-decoration: none;">
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          </a>
        </div>

        <div id="search" class="container hidden">
          <% form_tag(search_viz_path, :method => :get) do -%>
            <%= text_field_tag :q, nil, :class => "search", :style => "width: 90%" -%>
          <% end -%>

          <form class="half" action="" method="get">
            <input type="text" class="search" id="q" name="q" style="width: 100%" />
          </form>
          <span class="clear">&nbsp;</span>
        </div>
      </div>
    </div>

    <%= render :partial => "layouts/analytics" %>
  </body>
</html>
