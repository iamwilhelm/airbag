<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Graphbug : visualization</title>

    <link href="/site-media/css/bugs_life_theme.css" rel="stylesheet" type="text/css" />
    <%= stylesheet_link_tag "css_commons/reset-fonts-grids.css" %>
    <%= stylesheet_link_tag "css_commons/three_column_fixed_layout.css" %>
    <%= stylesheet_link_tag "css_commons/widgets.css" %>
    <link href="/site-media/css/jquery.autocomplete.css" rel="stylesheet" type="text/css" />
    
    <script src="/site-media/js/underscore.js" type="text/javascript"></script>
    
    <script src="/site-media/js/jquery-1.3.2.min.js" type="text/javascript"></script>
    <script src="/site-media/js/jquery-ui-1.7.2.min.js" type="text/javascript"></script>
    <script src="/site-media/js/jquery.autocomplete.min.js" type="text/javascript"></script>
    
    <script src="/site-media/js/french_maid.js" type="text/javascript"></script>    
    <script src="/site-media/js/protovis-3.1.js" type="text/javascript"></script>
    
    <script src="/site-media/js/tuftee.js" type="text/javascript"></script>
    <script src="/site-media/js/application.js" type="text/javascript"></script>
  </head>
  <body>
    <div class="frame">
      <div class="header">
        <div class="container" style="float: left">
          <h1>Graphbug</h1>
        </div>
        <div class="nav container">
          logout
        </div>
      </div>
      
      <div class="section" id="notifications">
        <% if flash[:notice] %>
          <p class="notice container"><%= notice %></p>
        <% end %>
        <% if flash[:error] %>
          <p class="error container"><%= error %></p>
        <% end %>
      </div>

      <div class="section" id="content">
        <%= yield %>
      </div>

      <div class="footer">
        <div class="container">
          Timeapple (c) 2009
        </div>
      </div>
    </div>

    <%= render :parital => "analytics" %>

  </body>
</html>
